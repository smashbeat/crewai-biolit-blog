---
import Base from "../../layouts/Base.astro";
import { getCollection, getEntryById } from "astro:content";

export async function getStaticPaths() {
  const posts = await getCollection("posts");
  return posts.map((post) => ({
    params: { slug: post.slug },   // <-- REQUIRED
    props: { id: post.id },        // pass a small serializable prop
  }));
}

const { id } = Astro.props;
const post = await getEntryById("posts", id);
const { Content } = await post.render();
const { title, description, tags = [] } = post.data;
---

<Base title={title}>
  <article class="prose">
    <h1>{title}</h1>
    {description && <p class="text-gray-600">{description}</p>}
    {tags.length > 0 && (
      <p>
        {tags.map((t, i) => (
          <>
            <a href={`/tags/${encodeURIComponent(t)}/`}>{t}</a>{i < tags.length - 1 ? ", " : ""}
          </>
        ))}
      </p>
    )}
    <Content />
  </article>
</Base>
